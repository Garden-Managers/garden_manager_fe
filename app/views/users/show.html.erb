<div class="container-fluid bg-dark">
  <nav class="navbar navbar-dark bg-dark">
    <div class ="mx-auto">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <a class="nav-link active link-success fs-3" href="/dashboard">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-success fs-3" href="/logout">Weather Forecast</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-success fs-3" href="/plants">Plant Library</a>
        </li>
        <li class="nav-item">
          <a class="nav-link link-success fs-3" href="/logout">Log Out</a>
        </li>
      </ul>
    </div>
  </nav>
</div>
<div class="container-fluid bg-dark">
  <% flash.each do |name, msg|%>
    <div class="alert alert-success" role="alert">
      <%= content_tag :div, msg, class: name %>
    </div>
  <% end %>
  <% if current_user.zip.present?%>
    <section id="weather">
      <div class="card-group">
        <h4>7-Day Weather Forecast</h4>
        <% @forecast.each do |forecast| %>
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= forecast.date_format %></h5>
              <p class="card-text">
                Weather: <%= forecast.weather %>
                High: <%= forecast.high %>&deg; F
                Low: <%= forecast.low %>&deg; F
                <a href="#" class="btn btn-primary">See details</a>
              </p>
            </div>
          </div>
        <% end %>
      </div>
    </section>
    <div class='frost-dates'>
      <p>Fall frost date: <%= Date::MONTHNAMES[@fall.date[0..1].to_i] %> <%= @fall.date[2..3] %>, temperature <%= @fall.temperature_threshold %>&deg; F</p>
      <p>Spring frost date: <%= Date::MONTHNAMES[@spring.date[0..1].to_i] %> <%= @spring.date[2..3] %>, temperature <%= @spring.temperature_threshold %>&deg; F</p>
    </div>

    <div class='plants'>
    <dl>
      <h2>My Plants!</h2>
    <% @plants.each do |plant| %>
      <div class='plant-count'>
     <dt>Plant: <%= plant.name %></dt>
      <dd>Frost Date: <%= plant.frost_date%></dd>
      <dd>Maturity: <%= plant.maturity%>&deg; F</dd><br>
      </div>
    <% end %>
  <% else %>
    <section id="zip-form">

      <%= form_with url: "/users/#{current_user.user_id}", method: :patch, html: { class: 'zip-form' }, local: true do |f| %>
        <%= f.label :zip %>
        <%= f.text_field :zip %>
        <%= f.submit "Submit" %>
      <% end %>
    </section>
  <% end %>
</div>
